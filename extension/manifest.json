{
    "name": "Scuba Radar V2",
    "description": "Atualização do Scuba Radar V1 para o Scuba Radar V2.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://cursos.alura.com.br/forum/*"
            ],
            "css": [
                "/styles/global.css",
                "/styles/chat.css"
            ],
            "js": [
                "/js/socket.io.js",
                "/js/chat.js",
                "/js/socketRequest.js",
                "/js/content.js"
            ]
        }
    ],
    "permissions": ["scripting", "storage"]
}